<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/cardview_corner_radius"
    card_view:cardElevation="@dimen/cardview_elevation"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true"
    android:layout_marginStart="@dimen/home_horizontal_margin"
    android:layout_marginEnd="@dimen/home_horizontal_margin"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_10dp">

        <TextView
            android:id="@+id/note_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/note_title_placeholder_txt"
            android:textSize="@dimen/detail_cardview_text_size" />

        <RelativeLayout
            android:id="@+id/cover_photo_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cover_photo_layout_height"
            android:layout_below="@+id/note_title_tv"
            android:layout_marginBottom="@dimen/cover_photo_container_margin_top_bottom"
            android:layout_marginEnd="@dimen/cover_photo_container_margin_start_end"
            android:layout_marginStart="@dimen/cover_photo_container_margin_start_end"
            android:layout_marginTop="@dimen/cover_photo_container_margin_top_bottom">

            <ImageView
                android:id="@+id/note_cover_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cover_photo_layout_height"
                android:contentDescription="@string/cover_photo_description"
                android:scaleType="centerCrop"
                android:src="@drawable/default_img_cover" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/photo_background_protection" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/activity_date_container_bottom_start"
                android:layout_marginStart="@dimen/activity_date_container_bottom_start"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/note_activity_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/activity_icon_description"
                    android:src="@mipmap/fake_icon" />

                <TextView
                    android:id="@+id/note_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_placeholder"
                    android:textSize="@dimen/detail_cardview_text_size" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/note_description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cover_photo_container"
            android:layout_marginTop="@dimen/margin_5dp"
            android:ellipsize="end"
            android:maxLength="60"
            android:maxLines="1"
            android:text="@string/note_description_placeholder"
            android:textSize="@dimen/detail_cardview_text_size" />
    </RelativeLayout>
</android.support.v7.widget.CardView>